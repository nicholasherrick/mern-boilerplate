{
  "name": "mern-boilerplate",
  "version": "0.1.0",
  "private": true,
  "description": "This project is a mern boiler plate created using create-react-app & express with passport json web tokens",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nicholasherrick/mern-boilerplate.git"
  },
  "author": "Nicholas Herrick",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nicholasherrick/mern-boilerplate/issues"
  },
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "bcrypt": "^4.0.1",
    "cookie-parser": "^1.4.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "if-env": "^1.0.4",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.9.9",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router": "^5.1.2",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.4.1"
  },
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:production || npm run start:dev",
    "start:dev": "concurrently \"nodemon server.js\" \"react-scripts start\"",
    "start:production": "node server.js",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^5.1.0",
    "nodemon": "^2.0.3"
  },
  "proxy": "http://localhost:3001"
}
